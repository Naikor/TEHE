<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/scr"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl"
            android:orientation="vertical">

            <TextView
                android:id="@+id/N1"
                android:layout_width="102dp"
                android:layout_height="54dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Nombre"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/nom"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/N1"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/A"
                android:layout_width="102dp"
                android:layout_height="54dp"
                android:layout_alignTop="@id/N1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:text="Apellido"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/ape"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_alignTop="@id/A"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/C"
                android:layout_width="102dp"
                android:layout_height="54dp"
                android:layout_alignTop="@id/A"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:inputType=""
                android:text="Correo"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/cor"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_alignTop="@id/C"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/T"
                android:layout_width="102dp"
                android:layout_height="54dp"
                android:layout_alignTop="@id/C"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:text="Telefono"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/tel"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_alignTop="@id/T"
                android:ems="10"
                android:inputType="phone"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/CO"
                android:layout_width="104dp"
                android:layout_height="54dp"
                android:layout_alignTop="@id/T"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:text="ContraseÃ±a"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/con"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_alignTop="@id/CO"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/usu1"
                android:layout_width="104dp"
                android:layout_height="54dp"
                android:layout_alignTop="@id/CO"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:text="Nick"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/usua"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_alignTop="@id/usu1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <Button
                android:id="@+id/registrar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/usu1"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="60dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/round_button"
                android:text="Registrar"
                android:textSize="20dp" />

            <Button
                android:id="@+id/cancelar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignTop="@id/registrar2"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="200dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/round_button"
                android:text="Cancelar"
                android:textSize="20dp" />
        </RelativeLayout>
    </ScrollView>

</android.widget.RelativeLayout>